  <body class="">
    <section id="content" class="m-t-lg wrapper-md animated fadeInUp">    
      <div class="container aside-xl">

        <a class="navbar-brand block" href="index.html">Ubitaxi</a>
        <section class="m-b-lg">

          <% if (expire == false  && complete == true) { %>

             <div class="alert alert-success">  <i class="fa fa-ban-circle"></i><strong>Listo... </strong> <a href="#" class="alert-link"><h5 >Tu contraseña ha sido cambiada con éxito</h5></div>

          <% } else{ %> 

          <% if (expire == false ) { %>
          <header class="wrapper text-center">
            <strong>Elige tu nueva contraseña</strong>
          </header>
          <form data-validate="parsley" action="/changepass" method="post">
            <div class="list-group">
              <div class="list-group-item">
                <input  name="newPass1" type="password"  placeholder="Nueva Contraseña" class="form-control no-border" data-required="true" id="pwd" > 
              </div>
              <div class="list-group-item">
               <input  name="newPass2"  type="password" placeholder="Repite la contraseña" class="form-control no-border" data-equalto="#pwd" data-required="true">
             </div>
           </div>
           <input type="hidden" name="email"  value="<%= email %>"/>  
           <input type="hidden" name="token"  value="<%= token %>"/>  
           <button type="submit" class="btn btn-lg btn-primary btn-block">Cambia contraseña</button>
         </form>
         <% } else{ %> 
         <div class="alert alert-danger">  <i class="fa fa-ban-circle"></i><strong>Uppps... algo salio mal</strong> <a href="#" class="alert-link"><h5 >La solicitud de restablacimiento de contraseña no existe o esta vencida </br> Te invitamos a genera una nueva. recuerda que solo duran 24 horas</h5></div>


         <% } %>

         <% } %>


       </section>
     </div>
   </section>
